<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:theme="@style/AppTheme"
    android:fitsSystemWindows="true"
    android:id="@+id/CL"
    android:background="@drawable/logo"
    android:layout_height="match_parent"
    tools:context=".ItemDetailActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/colorAccent"
        android:id="@+id/app_bar"
        >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorAccent"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:menu="@menu/searchtoolbar"
            ></androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <FrameLayout
        android:id="@+id/toolbar_container"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></FrameLayout>
    <ImageView
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/frameLayout"
        />
    <edmt.dev.advancednestedscrollview.AdvancedNestedScrollView
        android:id="@+id/nested_scroll_view"
        app:layout_behavior="com.example.fyp.Behavior.CustomBehavior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/card_container"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:descendantFocusability="blocksDescendants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                app:cardBackgroundColor="#FDFFFFFF"
                app:cardCornerRadius="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="30dp"
                            android:layout_marginTop="1dp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:background="@drawable/line"></TextView>
                        <TextView
                            android:layout_weight="10"
                            android:textStyle="bold"
                            android:text="2.3k"
                            android:layout_marginTop="14dp"
                            android:layout_marginRight="38dp"
                            android:layout_width="wrap_content"
                            android:id="@+id/noOflikes"
                            android:textColor="@color/colorAccent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|right"/>
                    </LinearLayout>
                    <TextView
                        android:layout_marginTop="2dp"
                        android:id="@+id/card_sub_title"
                        android:ellipsize="end"
                        android:paddingLeft="24dp"
                        android:paddingRight="24dp"
                        android:textColor="#D50000"
                        android:paddingTop="2dp"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        android:text="Best 5 Chrisma tree around the world"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:src="@drawable/line"
                        android:tint="@color/white"
                        android:background="#77AEACAB"
                        android:layout_marginBottom="5dp"
                        />

                    <TextView
                        android:ellipsize="end"
                        android:id="@+id/card_title"
                        android:paddingBottom="5dp"
                        android:paddingLeft="24dp"
                        android:textStyle="bold"
                        android:paddingRight="24dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:paddingTop="5dp"
                        android:text="Chrisma"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="6dp"
                                android:src="@drawable/line"
                                android:background="#77AEACAB"
                                android:layout_marginBottom="10dp"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:textColor="@color/black"
                                    android:id="@+id/pcolor"
                                    android:layout_gravity="top"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                    android:text="Product Color : "/>
                                <androidx.recyclerview.widget.RecyclerView
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_gravity="bottom"
                                    android:paddingLeft="5dp"
                                    android:paddingTop="5dp"
                                    android:layout_marginTop="10dp"
                                    android:scrollbars="horizontal"
                                    android:backgroundTint="@color/common_google_signin_btn_text_dark_disabled"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/myColorList"></androidx.recyclerview.widget.RecyclerView>
                            </LinearLayout>
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="6dp"
                                android:src="@drawable/line"
                                android:background="#77AEACAB"
                                android:layout_marginBottom="10dp"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_marginLeft="10dp" android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:paddingLeft="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:id="@+id/Psize"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                    android:text="Product Size : S"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:orientation="horizontal">
                                    <CheckedTextView
                                        android:layout_width="45dp"
                                        android:layout_height="50dp"
                                        android:text="S"
                                        android:id="@+id/checkbox1"
                                        android:clickable="true"
                                        android:textAlignment="center"
                                        android:onClick="onClick4"
                                        android:textColor="@color/white"
                                        android:textSize="20sp"
                                        android:checked="true"
                                        android:gravity="center"
                                        android:layout_marginRight="5dp"
                                        android:layout_gravity="center"
                                        android:foreground="?android:attr/selectableItemBackground"
                                        android:background="@drawable/checkbox_layout"
                                        android:padding="10dp"
                                        />
                                    <CheckedTextView
                                        android:layout_width="45dp"
                                        android:layout_height="50dp"
                                        android:text="M"
                                        android:textAlignment="center"
                                        android:id="@+id/checkbox2"
                                        android:clickable="true"
                                        android:onClick="onClick5"
                                        android:textSize="20sp"
                                        android:layout_marginRight="5dp"
                                        android:gravity="center"
                                        android:checked="false"
                                        android:layout_gravity="center"
                                        android:foreground="?android:attr/selectableItemBackground"
                                        android:background="@drawable/checkbox_layout"
                                        android:padding="10dp"
                                        /> <CheckedTextView
                                    android:layout_width="45dp"
                                    android:layout_height="50dp"
                                    android:text="L"
                                    android:textAlignment="center"
                                    android:id="@+id/checkbox3"
                                    android:clickable="true"
                                    android:gravity="center"
                                    android:onClick="onClick6"
                                    android:textSize="20sp"
                                    android:layout_gravity="center"
                                    android:checked="false"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:background="@drawable/checkbox_layout"
                                    android:padding="10dp"
                                    />
                                    <CheckedTextView
                                        android:layout_width="45dp"
                                        android:layout_height="50dp"
                                        android:gravity="center"
                                        android:text="XL"
                                        android:id="@+id/checkbox4"
                                        android:clickable="true"
                                        android:onClick="onClick7"
                                        android:textSize="20sp"
                                        android:layout_marginRight="10dp"
                                        android:layout_gravity="center" android:layout_marginLeft="5dp"
                                        android:checked="false"
                                        android:foreground="?android:attr/selectableItemBackground"
                                        android:background="@drawable/checkbox_layout"
                                        android:padding="10dp"
                                        />
                                </LinearLayout>
                            </LinearLayout>
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_marginTop="5dp"   android:layout_height="6dp"
                                android:src="@drawable/line"
                                android:background="#77AEACAB"
                                android:layout_marginBottom="5dp"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="It's an 'Add to Cart' kinda day !"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="8dp"
                                android:textColor="#FF6D00"
                                android:background="#DAF4E7AC"
                                />

                            <androidx.cardview.widget.CardView
     android:layout_marginBottom="10dp"                           app:cardBackgroundColor="#FDFFFFFF"
                                app:cardCornerRadius="2dp"
                                android:elevation="5dp"
                                app:cardElevation="10dp"
                                app:cardUseCompatPadding="true" android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">
                                        <ImageView
                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
                                            android:layout_gravity="bottom"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginRight="10dp"
                                            android:onClick="addtocart"
                                            android:src="@drawable/cart"
                                            android:text="Add to Cart"
                                            android:textColor="#FDFBFB"
                                            android:tint="@color/black" />
                                        <Button
                                            android:id="@+id/buyNow"
                                            android:onClick="buyNow"
                                            android:layout_margin="5dp"
                                            android:background="@drawable/button"
                                            android:textColor="@color/white"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Buy Now" />
                                    </LinearLayout>

                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:id="@+id/card_header_shadow"
                                android:alpha="0"
                                android:background="@drawable/toolbar_shadow">
                            </View>
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_gravity="top|end"
                android:layout_marginRight="24dp"
                android:src="@drawable/nfav"
                android:tint="@color/white"
                android:background="@color/white"
                android:onClick="onClickFab"
                android:visibility="visible"
                app:layout_anchor="@id/card_container"
                app:layout_anchorGravity="top|end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </com.google.android.material.floatingactionbutton.FloatingActionButton>
        </FrameLayout>
    </edmt.dev.advancednestedscrollview.AdvancedNestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
