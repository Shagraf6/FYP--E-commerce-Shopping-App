<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="190dp"
    android:layout_width="150dp"
    android:layout_marginRight="5dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_weight="1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
        android:background="@drawable/border"
    android:id="@+id/myAssersoriesCard"
    android:layout_height="match_parent">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/AssersoriesImg"
        android:layout_width="match_parent"
android:background="@drawable/border"
        app:riv_corner_radius="4dp"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:src="@drawable/shirtsandtsihirt"></com.makeramen.roundedimageview.RoundedImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:layout_gravity="center"
        android:background="#AEF99584"
        android:fontFamily="cursive"
        android:gravity="center"
        android:visibility="visible"
        android:id="@+id/AssersoriesText"
        android:includeFontPadding="true"
        android:text="Assersories"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:padding="1dp"
        android:textStyle="bold"></TextView>
</androidx.cardview.widget.CardView>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
app:cardCornerRadius="4dp"
    android:layout_weight="1"
android:layout_marginTop="5dp"
    android:background="@drawable/border"
android:id="@+id/myAssersoriesCard2"
android:layout_height="match_parent">

<com.makeramen.roundedimageview.RoundedImageView
    android:id="@+id/AssersoriesImg2"
    android:layout_width="match_parent"
    android:background="@drawable/border"
    app:riv_corner_radius="4dp"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:cropToPadding="false"
    android:scaleType="centerCrop"
    android:src="@drawable/dreses"></com.makeramen.roundedimageview.RoundedImageView>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#AEF99584"
    android:fontFamily="cursive"
    android:gravity="center"
    android:visibility="visible"
    android:padding="1dp"
    android:id="@+id/AssersoriesText2"
    android:includeFontPadding="true"
    android:text="watch"
    android:textColor="@color/white"
    android:textSize="12sp"
    android:textStyle="bold"></TextView>
</androidx.cardview.widget.CardView>
</LinearLayout>